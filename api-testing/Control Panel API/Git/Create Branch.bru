meta {
  name: Create Branch
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/v2/comfygit/branch
  body: json
  auth: none
}

body:json {
  {
    "name": "feature/new-feature",
    "start_point": "HEAD"
  }
}

docs {
  Create a new git branch.

  Request:
  - name: Branch name (required)
  - start_point: Starting commit/ref (default: "HEAD")

  Response:
  - 200 { "status": "success", "branch": "feature/new-feature" }
  - 400 { "error": "name is required" }
  - 500 { "status": "error", "message": "..." }
}
