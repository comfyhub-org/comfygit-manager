meta {
  name: Export Environment
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/v2/comfygit/export
  body: json
  auth: none
}

body:json {
  {
    "output_path": "/tmp/my_env_export.tar.gz"
  }
}

docs {
  Export environment to tarball (workflows, pyproject.toml, model metadata).

  Request:
  - output_path: Optional custom output path. If omitted, uses:
    {parent_dir}/{env_name}_export_{timestamp}.tar.gz

  Response:
  - 200 {
      "status": "success",
      "path": "/path/to/export.tar.gz",
      "models_without_sources": 2
    }
  - 500 { "status": "error", "message": "..." }

  Note: Large models are NOT included in tarball, only metadata.
}
